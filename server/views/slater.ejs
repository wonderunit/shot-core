<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/tachyons.min.css">
  <link rel="stylesheet" href="/css/slater.css">
</head>
<body>

<style>
.image-grid {
  display: grid;
  grid-template-columns: repeat(1, minmax(0, 1fr));
  gap: 0.25rem;
}
</style>

<div class="helvetica ph3 pa4-ns mv3 ma0-ns">
  <div class="lh-copy">

    <% if (project.slater_event_id) { %>
    <div class="flex">
      <div class="w-100 pa2">
        <h1 class="f3 ma0"><%= project.name %></h1>

        <div class="flex w-100">
          <div class="mv3 mr3 w-30">
            <div class="flex flex-column">
              <div class="center">
                Scene
              </div>
              <div class="f1 center">
                <%= scene.scene_number %>
              </div>
              <div class="center">
                <small class="f7 gray">
                  <%= scene.slugline %>
                </small>
              </div>
            </div>
          </div>
          <div class="mv3 mr3 w-30">
            <div class="flex flex-column">
              <div class="center">
                Shot
              </div>
              <div class="f1 center">
                <%= shot.shot_number %>
              </div>
            </div>
          </div>
          <div class="mv3 mr3 w-30">
            <div class="flex flex-column">
              <div class="center">
                Take
              </div>
              <div class="f1 center status_<%= status %>">
                <%= number %>
              </div>
              <div class="center">
                <small class="f7 gray"><%= label %></small>
              </div>
            </div>
          </div>
        </div>
        <div class="flex items-start">
          <img class="w-50" src="<%= scene.imagesPath %>/<%= shot.posterframe %>" />

          <div class="w-25">
            <div class="image-grid">
              <% for (let board of shot.boards) { %>
                <img src="<%= scene.imagesPath %>/<%= board.thumbnail %>" />
              <% } %>
            </div>
          </div>

          <% if (shot.cameraPlot) { %>
            <img class="w-25" src="<%= scene.imagesPath %>/<%= shot.cameraPlot %>" />
          <% } %>
        </div>
        <div class="flex items-center justify-between w-100 f6 pv3">
          <div class="w-30">
            <% for (let board of shot.boards) { %>
              <% if (board.dialogue) { %>
                <b>Dialogue:</b> <%= board.dialogue %><br />
              <% } %>
              <% if (board.action) { %>
                <b>Action:</b> <%= board.action %><br />
              <% } %>
              <% if (board.notes) { %>
                <b>Notes:</b> <%= board.notes %><br />
              <% } %>
            <% } %>
          </div>
          <div>
            TRIPOD <!-- TODO -->
          </div>
          <div>
            <%= shot.shotType %>
          </div>
          <div>
            <%= shot.getCameraFocalLength(scene.metadata.aspectRatio) %><br />
            <%= shot.fStop %><br />
          </div>
          <div>
            Duration <%= friendlyDuration(shot.duration) %>
          </div>
        </div>
        <div class="flex">
          <% if (button == 'ready') { %>
          <form
            class="mv3 mr3"
            data-remote="true"
            method="POST"
            action="<%= `/projects/${project.id}/scenes/${scene.id}/shots/${shot.id}/takes.json` %>"
          >
            <input name="project_id" value="<%= project.id %>" type="hidden" />
            <input name="scene_id" value="<%= scene.id %>" type="hidden" />
            <input name="shot_id" value="<%= shot.id %>" type="hidden" />
            <button>Ready</button>
          </form>
          <% } else if (button == 'action') { %>
          <form
            class="mv3 mr3"
            data-remote="true"
            method="POST"
            action="<%= `/projects/${project.id}/scenes/${scene.id}/shots/${shot.id}/takes/${take.id}/action.json` %>"
          >
            <button>Action</button>
          </form>
          <% } else if (button == 'cut') { %>
          <form
            class="mv3 mr3"
            data-remote="true"
            method="POST"
            action="<%= `/projects/${project.id}/scenes/${scene.id}/shots/${shot.id}/takes/${take.id}/cut.json` %>"
          >
            <button>Cut</button>
          </form>
          <% } %>

          <form
            class="mv3 mr3"
            data-remote="true"
            method="POST"
            action="<%= `/projects/${project.id}/slater.json` %>"
          >
            <input type="hidden" name="_method" value="PATCH">
            <input name="transition" value="next" type="hidden" />
            <button>Next Shot â†’</button>
          </form>
          <form
            class="mv3 mr3"
            data-remote="true"
            method="POST"
            action="<%= `/projects/${project.id}/slater.json` %>"
          >
            <input type="hidden" name="_method" value="PATCH">
            <input name="transition" value="previous" type="hidden" />
            <button>Previous Shot</button>
          </form>
          <form
            class="mv3 mr3"
          > 
            <button disabled title="Insert an Impromptu Shot">Impromptu Shot</button>
          </form>
        </div>

        <div>
          <% if (prev) { %>
            <div class="mt3 mb2">
              Rating for previous Take #<%= prev.take_number %>:
            </div>
            <div
              class="f6 mt1"
              data-controller="rating"
              data-rating-value="<%= prev.rating %>"
              data-rating-url="<%= `/projects/${project.id}/scenes/${scene.id}/shots/${shot.id}/takes/${prev.id}.json` %>"
            >
              <a data-target="rating.none"
                 data-action="click->rating#setRating"
                 data-value=""
                 class="mr2 <%= prev.rating == null ? 'black' : 'black-30' %>"
                 href="#">No Rating</a>

              <a data-target="rating.zero"
                 data-action="click->rating#setRating"
                 data-value="0"
                 class="mr2 <%= prev.rating == 0 ? 'black' : 'black-30' %>"
                 href="#">No Stars</a>

              <% for (let i = 0; i < 5; i++) { %>
                <a data-target="rating.star"
                  data-action="click->rating#setRating"
                  data-value="<%= i + 1 %>"
                  class="link <%= prev.rating > i ? 'black' : 'black-30' %>"
                  href="#">â˜…</a>
              <% } %>
            </div>
          <% } %>
        </div>

      </div>
      <!--
      <div class="pa2">
        <div class="f7">
          <h3 class="f4 ma0 mb4">All Takes for Shot <%= shot.shot_number %></h3>
          <% for (let take of takes) { %>
            <div class="mb3">
              <b>Take <%= take.take_number %></b><br />
              <%= take.ready_at && 'ðŸ“£ ' + format(Date.parse(take.ready_at), 'hh:mm:ss.SSS a') %><br />
              <%= take.action_at && 'ðŸŽ¬ ' + format(Date.parse(take.action_at), 'hh:mm:ss.SSS a') %><br />
              <%= take.cut_at && 'âœ‚ï¸ ' + format(Date.parse(take.cut_at), 'hh:mm:ss.SSS a') %><br />
            </div>
          <% } %>
          <% if (takes.length == 0) { %>
            <span class="gray">None</span>
          <% } %>
        </div>
      </div>
      -->
    </div>
    <% } else { %>
      <div class="flex">
        <div class="w-100 pa2">
          <h1 class="f3 ma0"><%= project.name %></h1>
          <p>
            Slater hasnâ€™t started yet.
          </p>
        </div>
      </div>
    <% } %>
  </div>
</div>

<div class="ma4">
  <small class="lh-copy helvetica black-40">
    Device Time: <span id="clock"></span>
  </small>
</div>

<script src="/js/stimulus.umd.js"></script>
<script src="/js/slater.js"></script>
</body>
</html>
